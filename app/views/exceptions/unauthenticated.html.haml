%h1 Login

%div
  - if !session.authentication.errors.empty?
    .error 
      %h2 Email or Password were incorrect
      
  - @login_param = Merb::Authentication::Strategies::Basic::Base.login_param
  - @password_param = Merb::Authentication::Strategies::Basic::Base.password_param

  %form{:action=>slice_url(:merb_auth_slice_password, :perform_login), :method=>"POST", :accept_charset=>"utf-8"}
    %input{:type=>"hidden", :name=>"_method", :value=>"PUT"}
    %p
      %label
        = @login_param.to_s.capitalize
        \: 
      %input{:type=>"text", :name=>@login_param.to_s, :value=>"", :id=>@login_param.to_s}
    %p
      %label
        = @password_param.to_s.capitalize
        \:
      %input{:type=>"password", :name=>@password_param.to_s, :value=>"", :id=>@password_param.to_s}
    .formRow
      %input{:type=>"submit", :name=>"Submit", :value=>"Log In", :id=>"Submit", :class => 'submit'}
        